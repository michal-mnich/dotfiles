SHELL=/bin/zsh

# @ - based on uptime
# & - based on time and date
# % - based on keyword

# If a job was missed, execute at startup
!bootrun(true)

# Serialize jobs (one after the other)
!serial(true)

# Execute '@'-jobs at startup
!first(0)

# Sync KeepassXC database every 15 minutes of uptime
@ 15 rclone bisync --check-access $HOME/keepassxc mimuw:keepassxc

# Backup after startup every 12h of uptime
@ 12h $HOME/.config/my_backup/backup.sh

# Refresh mirror list once a day (ASAP)
%daily * * sudo systemctl start reflector && yay -Syy

